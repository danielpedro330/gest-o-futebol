{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2020",
    "outDir": "./dist", 
    "rootDir": "." ,  
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "skipLibCheck": true
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
